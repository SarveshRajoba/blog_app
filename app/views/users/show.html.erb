<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title"><%= @user.username %>'s Profile</h2>
      <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>

      <% if @user == current_user %>
        <div class="d-flex gap-2 mt-3">
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
          <%= button_to "Delete Account", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "Back to Home", root_path, class: "btn btn-warning" %>
      </div>

      <%= link_to "My Blogs", my_blogs_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>
