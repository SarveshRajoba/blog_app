<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-3">Edit Profile</h2>

      <%= form_with(model: @user, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :username, class: "form-label" %>
          <%= form.text_field :username, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "New Password (leave blank to keep current)", class: "form-label" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Update Profile", class: "btn btn-success" %>
          <%= link_to "Back", @user, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
