<div class="container mt-4">
  <h1 class="mb-4 text-center">Edit Blog</h1>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: @blog, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control", rows: 5, required: true %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit "Update Blog", class: "btn btn-warning" %>
          <%= link_to "Back to Blogs", blogs_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
