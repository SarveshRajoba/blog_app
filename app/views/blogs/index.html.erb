<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">All Blogs</h1>
    <%= link_to "New Blog", new_blog_path, class: "btn btn-success" %>
  </div>

  <div class="list-group">
    <% @blogs.each do |blog| %>
      <div class="list-group-item py-4 px-4 mb-3 rounded shadow-sm border-0" style="background: #f8f9fa;">
        <h3 class="mb-2">
          <%= link_to blog.title, blog_path(blog), class: "text-decoration-none text-dark fw-bold" %>
        </h3>
        <p class="text-muted mb-3" style="font-size: 1.1rem;">
          <%= truncate(blog.content, length: 150) %>
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <%
=begin%>
 <%= link_to "Read More", blog_path(blog), class: "btn btn-primary btn-sm px-4 py-2 rounded-pill fw-semibold" %> 
<%
=end%>
          <small class="text-muted">
            <%= blog.created_at.strftime("%B %d, %Y") %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>
